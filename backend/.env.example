# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/subscription_tracker
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/subscription_tracker_test

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret-token
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/v1/telegram/webhook
TELEGRAM_API_URL=https://api.telegram.org/bot

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Subscription Tracker
VERSION=1.0.0

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development
DEBUG=true

# Premium Features
FREE_TIER_MAX_SUBSCRIPTIONS=5
PREMIUM_PRICE_MONTHLY=4.99
PREMIUM_PRICE_YEARLY=49.99
DEFAULT_CURRENCY=RUB

# Notification Settings
NOTIFICATION_REMINDER_DAYS=[1, 3, 7]
NOTIFICATION_TIMEZONE=Europe/Moscow
NOTIFICATION_ENABLED=true

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/gif"]

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
HEALTH_CHECK_INTERVAL=30
