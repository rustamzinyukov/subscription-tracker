# Railway Environment Variables
# Copy this file and rename to railway.env for local development
# These variables will be automatically set in Railway production

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/subscription_tracker

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret-token
TELEGRAM_WEBHOOK_URL=https://your-railway-app.railway.app/api/v1/telegram/webhook

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Subscription Tracker
VERSION=1.0.0

# CORS (Railway domain)
CORS_ORIGINS=https://your-railway-app.railway.app,https://your-frontend-domain.com

# Environment
ENVIRONMENT=production
DEBUG=false

# Premium Features
FREE_TIER_MAX_SUBSCRIPTIONS=5
PREMIUM_PRICE_MONTHLY=4.99
PREMIUM_PRICE_YEARLY=49.99
DEFAULT_CURRENCY=RUB

# Notification Settings
NOTIFICATION_REMINDER_DAYS=[1, 3, 7]
NOTIFICATION_TIMEZONE=Europe/Moscow
NOTIFICATION_ENABLED=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
HEALTH_CHECK_INTERVAL=30
